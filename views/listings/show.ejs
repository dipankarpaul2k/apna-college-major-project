<% layout("layouts/boilerplate") %>
<script>
  const mapKey = "<%= process.env.MAPQUEST_KEY %>";
  let addressToGeocode = "<%= listing.location %>, <%= listing.country %>";
</script>
<div class="container mb-5" aria-label="show page container">
  <!-- row start -->
  <div
    class="row align-items-center justify-content-center"
    aria-label="show page main row"
  >
    <!-- column start -->
    <div class="col-lg-10" aria-label="show page center column">
      <h3 class="heading showHeading"><%= listing.title %></h3>

      <div class="card showCard">
        <!-- carousel image slide -->
        <div
          id="carouselExampleIndicators"
          class="carousel slide card-img-top rounded"
          aria-label="carousel image slider"
        >
          <!-- carousel image indicator -->
          <div class="carousel-indicators">
            <button
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide-to="0"
              class="active"
              aria-current="true"
              aria-label="Slide 1"
            ></button>
            <button
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide-to="1"
              aria-label="Slide 2"
            ></button>
            <button
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide-to="2"
              aria-label="Slide 3"
            ></button>
          </div>
          <!-- carousel image container -->
          <div class="carousel-inner rounded">
            <div class="carousel-item active">
              <img
                src="<%= listing.image.url %>"
                class="d-block w-100 show_card_img"
                alt="carousel_slide"
              />
            </div>
            <div class="carousel-item">
              <img
                src="<%= listing.image.url %>"
                class="d-block w-100 show_card_img"
                alt="carousel_slide"
              />
            </div>
            <div class="carousel-item">
              <img
                src="<%= listing.image.url %>"
                class="d-block w-100 show_card_img"
                alt="carousel_slide"
              />
            </div>
          </div>
          <!-- carousel buttons -->
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev"
            aria-label="carousel left button"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next"
            aria-label="carousel right button"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
        <!-- carousel image slide end -->
        <!-- listing details -->
        <div class="card-body showCardBody">
          <p class="card-text fs-6">
            <i class="ri-home-smile-fill"></i> Hosted by
            <i><%= listing.owner.username %></i>
          </p>
          <p class="card-text fs-6"><%= listing.description %></p>
          <!-- toLocaleString("en-IN") converts any numbers in INDIAN format -->
          <p class="card-text fs-5 showPrice">
            ‚Çπ<%= listing.price.toLocaleString("en-IN") %>
            <span class="perNight"> / night</span>
          </p>
          <p class="card-text fs-6">
            <i class="ri-map-pin-fill"></i>
            <%= listing.location %>, <%= listing.country %>
          </p>

          <% if (currUser) { %>
          <!-- wishlist button -->
          <form method="POST" action="/wishlist">
            <input type="hidden" name="listingId" value="<%= listing._id %>" />
            <button class="btn btn-primary" type="submit">
              Add to Wishlist
            </button>
          </form>
          <% } %>

          <!-- buttons div -->
          <!-- <% if (currUser && currUser._id.equals(listing.owner._id)) { %> -->
          <div class="d-flex justify-content-center align-items-center mt-4">
            <!-- edit button -->
            <a
              class="btn btn-primary m-1"
              href="/listings/<%= listing._id %>/edit"
              ><i class="ri-edit-box-line me-1"></i>Edit</a
            >
            <!-- delete button -->
            <form
              action="/listings/<%= listing._id %>?_method=DELETE"
              method="POST"
            >
              <!-- <input type="hidden" name="_method" value="delete" /> -->
              <button type="submit" class="btn btn-danger m-1">
                <i class="ri-delete-bin-line"></i>
                Delete
              </button>
            </form>
          </div>
          <!-- <% } %> -->
          <!-- buttons div end -->
        </div>
        <!-- listing details end -->
      </div>

      <!-- if user is logged in -->
      <% if (currUser) { %>
      <hr class="mb-3" />
      <!-- review form section-->
      <div aria-label="review form section">
        <!-- heading -->
        <div class="text-center">
          <h4 class="fw-bold">
            Write a Review <i class="ri-user-star-fill"></i>
          </h4>
          <p>
            Tell us about your stay - Your Experience, Your Thoughts.<br />Your
            Reviews Make Us Better!
          </p>
          <!-- collapse button -->
          <a
            class="btn btn-primary mb-3"
            data-bs-toggle="collapse"
            href="#collapseExample"
            role="button"
            aria-expanded="false"
            aria-controls="collapseExample"
            onclick="formAutoFocus()"
          >
            Click Here
          </a>
        </div>

        <!-- review form container-->
        <div class="collapse" id="collapseExample">
          <form
            id="reviewForm"
            action="/listings/<%= listing._id %>/reviews"
            method="post"
            class="needs-validation"
            novalidate
          >
            <div class="mb-3">
              <label for="ratingInput" class="form-label" id="ratingLabel"
                >Rate us (üòê Average)</label
              >
              <!-- star input -->
              <fieldset class="starability-slot">
                <input
                  type="radio"
                  id="no-rate"
                  class="input-no-rate"
                  name="review[rating]"
                  value="3"
                  checked
                  aria-label="No rating."
                />
                <input
                  type="radio"
                  id="first-rate1"
                  name="review[rating]"
                  value="1"
                />
                <label
                  for="first-rate1"
                  title="üò† Terrible"
                  onclick="updateRatingLabel(1)"
                  >1 star</label
                >
                <input
                  type="radio"
                  id="first-rate2"
                  name="review[rating]"
                  value="2"
                />
                <label
                  for="first-rate2"
                  title="üòü Not good"
                  onclick="updateRatingLabel(2)"
                  >2 stars</label
                >
                <input
                  type="radio"
                  id="first-rate3"
                  name="review[rating]"
                  value="3"
                />
                <label
                  for="first-rate3"
                  title="üòê Average"
                  onclick="updateRatingLabel(3)"
                  >3 stars</label
                >
                <input
                  type="radio"
                  id="first-rate4"
                  name="review[rating]"
                  value="4"
                />
                <label
                  for="first-rate4"
                  title="üôÇ Very good"
                  onclick="updateRatingLabel(4)"
                  >4 stars</label
                >
                <input
                  type="radio"
                  id="first-rate5"
                  name="review[rating]"
                  value="5"
                />
                <label
                  for="first-rate5"
                  title="üòÑ Amazing"
                  onclick="updateRatingLabel(5)"
                  >5 stars</label
                >
              </fieldset>
            </div>
            <!-- comment input -->
            <div class="mb-3">
              <label for="comment" class="form-label">Comment</label>
              <textarea
                name="review[comment]"
                class="form-control"
                id="comment"
                rows="6"
                required
                style="resize: vertical"
                autofocus
              ></textarea>
              <div class="invalid-feedback">
                Please enter a proper comment for review.
              </div>
            </div>

            <!-- submit button -->
            <div class="text-center">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
      <!-- review form section end -->
      <% } %>

      <!-- show review section -->
      <% if (listing.reviews.length > 0) { %>
      <hr class="mb-3 mt-3" />
      <!-- show reviews -->
      <div aria-label="show review section">
        <!-- heading -->
        <div class="text-center">
          <h4 class="fw-bold">
            Ratings & Reviews <i class="ri-star-smile-fill"></i>
          </h4>
          <p>See what our customers are saying about Us!</p>
        </div>

        <!-- unordered list of reviews -->
        <div class="row justify-content-center gy-4">
          <% listing.reviews.forEach(elm => { %>
          <div class="col-md-10 col-lg-6">
            <!-- card start -->
            <div class="card">
              <div
                class="card-header d-flex justify-content-between align-items-center"
              >
                <!-- show stars -->
                <p
                  class="starability-result mb-0"
                  data-rating="<%= elm.rating %>"
                ></p>
                <% if (currUser && currUser._id.equals(elm.author._id)) { %>
                <!-- review card dropdown delete button -->
                <div class="dropdown">
                  <!-- dropdown button -->
                  <button
                    class="btn btn-light btn-sm dropdown-toggle"
                    type="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                  ></button>

                  <form
                    class="dropdown-menu dropdown-menu-end p-1"
                    action="/listings/<%= listing._id %>/reviews/<%= elm._id %>?_method=DELETE"
                    method="POST"
                  >
                    <!-- <input type="hidden" name="_method" value="delete" /> -->
                    <button type="submit" class="btn btn-light dropdown-item">
                      Delete
                    </button>
                  </form>
                </div>
                <!-- review card dropdown delete button end -->
                <% } %>
              </div>
              <!-- review text and author -->
              <div class="card-body">
                <blockquote class="blockquote mb-0">
                  <!-- <p class="card-title fw-semibold fs-6 m-0">
                    <%= elm.rating %> stars
                  </p> -->
                  <p class="fs-6"><%= elm.comment %></p>
                  <footer class="blockquote-footer">
                    <%= elm.author.username %>
                  </footer>
                </blockquote>
              </div>
            </div>
            <!-- card end -->
          </div>
          <% }) %>
        </div>
      </div>
      <!-- show reviews end -->
      <% } %>

      <!-- map -->
      <hr class="mb-3 mt-4" />
      <!-- heading -->
      <div aria-label="show location on map">
        <div class="text-center mb-4">
          <h4 class="fw-bold">
            Where You'll Be <i class="ri-road-map-fill"></i>
          </h4>
        </div>
        <div id="myMap" style="width: 100%; height: 400px"></div>
      </div>
      <!-- map end -->
    </div>
    <!-- column end -->
  </div>
</div>

<script src="/js/map.js"></script>
